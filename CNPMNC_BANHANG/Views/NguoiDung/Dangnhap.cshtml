
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<table align="center">
    <div class="col-md-12"><h3 style="text-align: center">ĐĂNG NHẬP</h3></div>
    
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:50px;font-size:18px">
            <td style="">Tên đăng nhập: </td>
            <td>
                @Html.TextBox("TenDN",null, new { @placeholder = "Tên tài khoản" })
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:50px;font-size:18px">
            <td align="right">Mật khẩu: </td>
            <td>
                @Html.Password("Matkhau",null, new { @placeholder = "Mật khẩu" })
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px;font-size:15px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
        <tr style="height:40px;font-size:15px">
            <td></td>
            <td>
                <a href="/nguoidung/dangky">Bạn có muốn tạo tài khoản không ?</a>
            </td>
        </tr>
    }
</table>

