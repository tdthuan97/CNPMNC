@model CNPMNC_BANHANG.Models.LOAISANPHAM

@{
    ViewBag.Title = "Sualoaisanpham";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maloai)

        <div class="form-group">
            <label class="control-label col-md-2" style="font-weight:bold;font-size:24px"> Tên loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenloai, new { htmlAttributes = new { @class = "form-control" } })
                <p class="text-danger">@ViewData["Loi1"]</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="font-weight:bold;font-size:24px">Trạng thái</label>
            <div class="col-md-10">
                <label>
                    @Html.RadioButtonFor(model => model.trangthai,true, new { @class = "radio-inline", id = "" })
                    <span>Đang hoạt động</span>
                </label>
                <label>
                    @Html.RadioButtonFor(model => model.trangthai, false, new { @class = "radio-inline", id = "" })
                    <span>Ngừng hoạt động</span>
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("TRỞ VỀ", "Loaisanpham")
</div>
